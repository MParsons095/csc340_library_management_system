@model IEnumerable<LibraryManagementSystem.Models.LibraryItem>

@{
    ViewBag.Title = "Library Items";
}

<div class="row">
    <div class="col-sm-9">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="col-sm-3 text-right">
        <br/>
        <div class="btn-group btn-group-right">
            <button class="btn btn-success btn-sm dropdown-toggle btn-lg" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Add New Item <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Book", "Create", "Books")</li>
                <li>@Html.ActionLink("Book", "Create", "Books")</li>
                <li>@Html.ActionLink("Book", "Create", "Books")</li>
            </ul>
        </div>
    </div>
</div>


@{
    if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Id)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>Type</th>
                    <th>
                        @Html.DisplayNameFor(model => model.PublicationYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @item.GetItemType()
                        </td>
                        <td>
                            @item.GetPublicationYear()
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.ActionLink("View", "Details", new { id = item.Id, controller = item.GetController() }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id, controller = item.GetController() }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id, controller = item.GetController() }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-center">You haven't added any items yet.</h3>
    }
}