@model IEnumerable<LibraryManagementSystem.Models.LibraryItem>

@{
    ViewBag.Title = "Library Items";
}

<div class="row">
    <div class="col-sm-9">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="col-sm-3">
        <br/>
        <div class="btn-group">
            <button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Add New Item <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Book", "Create", "Books")</li>
                <li>@Html.ActionLink("Book", "Create", "Books")</li>
                <li>@Html.ActionLink("Book", "Create", "Books")</li>
            </ul>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>Type</th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @item.GetItemType()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicationYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.ActionLink("View", "Details", new { id = item.Id, controller = item.GetController() }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id, controller = item.GetController()}, new {@class = "btn btn-warning"})
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id, controller = item.GetController()}, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
